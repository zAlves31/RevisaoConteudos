﻿@{
    ViewData["Title"] = "Atividades";
}
@if (ViewBag.NomeProfessor == null)
{
    <a asp-controller="Login">Login</a>
}
else
{
    <div>
        <h3>@ViewBag.NomeProfessor</h3>

        <form asp-controller="Login" asp-action="Logout" method="post">
            <button type="submit">Sair</button>
        </form>
    </div>


    <form asp-controller="Atividade" asp-action="CadastrarAtividade" method="post">
        <input hidden name="turmaId" value="@ViewBag.TurmaId" />
        <input type="text" name="descricao" placeholder="Nome" required />
        <button type="submit">Cadastrar Atividade</button>
    </form>

    <h4>Turma: @ViewBag.NomeTurma</h4>
    <table>
        <thead>
            <tr>
                <th>Número</th>
                <th>Nome</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var atividade in Model)
            {
                <tr>
                    <td>@atividade.Id</td>
                    <td>@atividade.Descricao</td>
                </tr>

            }
        </tbody>
    </table>
}